<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="310.0" prefWidth="475.0"
      xmlns="http://javafx.com/javafx/16" fx:controller="wizradcc.wizards.Controller">
	<children>
		
		<Label fx:id="welcomeText" text="Wizard Maker">
			<font>
				<Font name="Gayathri Regular" size="20.0"/>
			</font>
		</Label>
		<HBox alignment="CENTER">
			<children>
				<VBox alignment="CENTER" prefHeight="245.0" prefWidth="375.0" spacing="10.0">
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
					</padding>
					<HBox alignment="CENTER" prefHeight="130.0" prefWidth="411.0" VBox.vgrow="ALWAYS">
						<VBox.margin>
							<Insets/>
						</VBox.margin>
						<children>
							<GridPane alignment="CENTER" hgap="5.0" maxHeight="-Infinity" maxWidth="-Infinity"
							          minHeight="130.0" minWidth="225.0" vgap="20.0" HBox.hgrow="ALWAYS">
								<columnConstraints>
									<ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" maxWidth="-Infinity"
									                   minWidth="0.0"/>
									<ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="-Infinity"
									                   minWidth="10.0"/>
								</columnConstraints>
								<rowConstraints>
									<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
									<RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER"
									                vgrow="SOMETIMES"/>
									<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
									<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
								</rowConstraints>
								<children>
									<Label text="Name"/>
									<Label text="Affinity" GridPane.rowIndex="1"/>
									<Label text="Element" GridPane.rowIndex="2"/>
									<Label text="Power Level" wrapText="true" GridPane.rowIndex="3"/>
									<TextField fx:id="txtName" GridPane.columnIndex="1"/>
									<TextField fx:id="txtElement" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
									<Spinner fx:id="spnPwrLvl" editable="true" GridPane.columnIndex="1"
									         GridPane.rowIndex="3"/>
									<HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="1"
									      GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
									      GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
										<children>
											<RadioButton fx:id="rbtnEvil" contentDisplay="CENTER"
											             mnemonicParsing="false" selected="true" text="Evil"
											             textFill="RED" HBox.hgrow="ALWAYS">
												<toggleGroup>
													<ToggleGroup fx:id="Affinity"/>
												</toggleGroup>
											</RadioButton>
											<Separator orientation="VERTICAL" prefHeight="200.0"/>
											<RadioButton fx:id="rbtnGood" contentDisplay="CENTER"
											             mnemonicParsing="false" text="Good" textFill="#00ed1c"
											             toggleGroup="$Affinity" HBox.hgrow="ALWAYS"/>
										</children>
									</HBox>
								</children>
							</GridPane>
						</children>
					</HBox>
				</VBox>
				<Separator fx:id="seperator" minWidth="10.0" orientation="VERTICAL" prefHeight="200.0"
				           HBox.hgrow="NEVER"/>
				<Label fx:id="blurb" alignment="CENTER" contentDisplay="CENTER" lineSpacing="2.0" maxHeight="-Infinity"
				       maxWidth="-Infinity" textOverrun="WORD_ELLIPSIS" wrapText="true" HBox.hgrow="SOMETIMES">
					<font>
						<Font name="Gargi" size="19.0"/>
					</font>
				</Label>
			</children>
			<padding>
				<Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
			</padding>
		</HBox>
		<Button onAction="#create" prefHeight="27.0" prefWidth="80.0" text="Create!"/>
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
	</padding>
</VBox>
